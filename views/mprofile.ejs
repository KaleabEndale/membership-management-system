<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }

        h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        form, div {
            background-color: #fff;
            padding: 20px;
            margin: 10px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

        label {
            font-weight: bold;
            margin: 5px;
            display: inline-block;
            color: #555;
        }

        select, button {
            padding: 10px;
            margin: 5px;
            width: 80%;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            background-color: #42a5f5;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover, select:hover {
            background-color: #1e88e5;
        }

        button.logout {
            background-color: #f44336;
        }

        button.logout:hover {
            background-color: #d32f2f;
        }

        option {
            padding: 5px;
        }

        p {
            margin: 5px;
        }

        .membership-buttons button {
            margin: 5px 2px;
            width: 47%;
        }

    </style>
</head>
<body>

    <h1 id="mp">MEMBER PROFILE</h1>
    <form action="" method="post">
        <label id="lg">Language</label>
        <select name="lang" id="lang" onchange="updatestext()">
            <option value="eng">English</option>
            <option value="amh">አማርኛ</option>
        </select>

        <div>
            <p><label id="name">Name</label>: <%= locals.mn %></p>
            <p><label id="contact">Contact</label>: <%= locals.mc %></p>
            <p><label id="email">Email</label>: <%= locals.me %></p>
            <p><label id="address">Address</label>: <%= locals.ma %></p>
        </div>
  <div>
            <button id="up" type="submit" formaction="/member/up" formmethod="post">Update Profile</button>
              <button id="uppass" type="submit" formaction="/member/uppass" formmethod="post">Change password</button><br>
        </div>
        <div>
            <p id="cm">Choose Membership</p>
            <div class="membership-buttons">
                <button id="sm" formaction="/member/standardmonthly" formmethod="post">Standard Monthly</button>
                <button id="sy" formaction="/member/standardyearly" formmethod="post">Standard Yearly</button><br>
                <button id="pm" formaction="/member/premiummonthly" formmethod="post">Premium Monthly</button>
                <button id="py" formaction="/member/premiumyearly" formmethod="post">Premium Yearly</button><br>
                <button id="lt" formaction="/member/lifetime" formmethod="post">Lifetime</button>
            </div>
        </div>

      
    </form>

    <form action="/member/logout" method="post">
        <button id="lo" class="logout">Logout</button>
    </form>

    <script>
        function updatestext(){
            const value = document.getElementById('lang').value;

            if(value === 'eng'){
                document.getElementById('lg').textContent = 'Language';
                document.getElementById('mp').textContent = 'MEMBER PROFILE';
                document.getElementById('name').textContent = 'Name';
                document.getElementById('contact').textContent = 'Contact';
                document.getElementById('email').textContent = 'Email';
                document.getElementById('address').textContent = 'Address';
                document.getElementById('up').textContent = 'Update Profile';
                document.getElementById('uppass').textContent = 'Update Password';
                document.getElementById('cm').textContent = 'Choose Membership';
                document.getElementById('sm').textContent = 'Standard Monthly';
                document.getElementById('sy').textContent = 'Standard Yearly';
                document.getElementById('pm').textContent = 'Premium Monthly';
                document.getElementById('py').textContent = 'Premium Yearly';
                document.getElementById('lt').textContent = 'Lifetime';
                document.getElementById('lo').textContent = 'Logout';
            } else if(value === 'amh'){
                document.getElementById('lg').textContent = 'ቋንቋ';
                document.getElementById('mp').textContent = 'የአባል ገጽታ';
                document.getElementById('name').textContent = 'ስም';
                document.getElementById('contact').textContent = 'ስልክ ቁጥር';
                document.getElementById('email').textContent = 'ኢሜል';
                document.getElementById('address').textContent = 'አድራሻ';
                document.getElementById('up').textContent = 'ገጽታ አስተካክል';
                document.getElementById('uppass').textContent = 'ፓስወርድ ቀይር';
                document.getElementById('cm').textContent = 'እቅድ ይምረጡ';
                document.getElementById('sm').textContent = 'መደበኛ ወርሃዊ';
                document.getElementById('sy').textContent = 'መደበኛ አመታዊ';
                document.getElementById('pm').textContent = 'ፕሪሚየም ወርሃዊ';
                document.getElementById('py').textContent = 'ፕሪሚየም አመታዊ';
                document.getElementById('lt').textContent = 'ዘላለማዊ';
                document.getElementById('lo').textContent = 'ውጣ';
            }
        }
    </script>

</body>
</html>
